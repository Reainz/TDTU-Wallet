<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When the spinner is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light gray background for pressed state -->
            <corners android:radius="8dp" />
<!--            <stroke android:width="1dp" android:color="#B0B0B0" />-->
        </shape>
    </item>

    <!-- When the spinner is selected -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#CCCCFF" /> <!-- Light purple background for selected state -->
            <corners android:radius="8dp" />
<!--            <stroke android:width="1dp" android:color="#B0B0B0" />-->
        </shape>
    </item>

    <!-- Default background for the spinner -->
    <item>
        <shape>
            <solid android:color="@color/background" /> <!-- Default background color -->
            <corners android:radius="8dp" />
<!--            <stroke android:width="1dp" android:color="#B0B0B0" />-->
        </shape>
    </item>
</selector>